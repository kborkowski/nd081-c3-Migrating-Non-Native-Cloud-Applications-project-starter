# Environment Template
# Copy this to .env and fill in your values
# NEVER commit .env to version control

# Azure Account Credentials
AZURE_USERNAME=your-azure-username@domain.com
AZURE_TEMP_PASSWORD=your-temporary-password

# Local PostgreSQL Configuration
POSTGRES_URL=localhost
POSTGRES_USER=postgres
POSTGRES_PW=your-local-postgres-password
POSTGRES_DB=techconfdb

# Azure PostgreSQL Database
AZURE_POSTGRES_URL=your-server.postgres.database.azure.com
AZURE_POSTGRES_USER=your-admin@your-server
AZURE_POSTGRES_PW=your-secure-password
AZURE_POSTGRES_DB=techconfdb

# Azure Service Bus
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://...
SERVICE_BUS_QUEUE_NAME=notificationqueue

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-api-key
ADMIN_EMAIL_ADDRESS=info@techconf.com

# Azure Resource Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=techconf-rg
AZURE_LOCATION=eastus

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
